<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c61621"
        android:layout_alignParentTop="true">

        <TextView

            android:id="@+id/editText"
            android:layout_width="397dp"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginStart="15dp"
            >
            <Button

                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/fanback_03"
                android:id="@+id/back_left"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/logo_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logo_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/publicBackground"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="掌门课堂"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@+id/logo_login"
        android:layout_centerHorizontal="true">

        <!--定义输入用户名的文本编辑框  -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boder"
            android:id="@+id/linearLayout"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
           >
            <ImageView
                android:id="@+id/icon03"
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_03" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                app:met_hideUnderline="true"
                app:met_clearButton= "true"
                android:hint="请输入电话号码"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:id="@+id/LinearLayout1"
            android:layout_marginTop="5dp"
            android:background="@drawable/boder"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/icon06"
                android:layout_marginRight="5dp"
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_06" />
            <!--定义输入密码的文本编辑框  -->
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_hideUnderline="true"
                android:hint="请输入密码"
                android:background="@null"
                android:inputType="textPassword"
                app:met_clearButton= "true"
                android:layout_alignTop="@id/icon06"
                android:layout_alignBottom="@id/icon06"
                android:layout_weight="1"
                android:layout_alignParentStart="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/LinearLayout1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/forgetpwd"
                android:text="忘记密码?"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="立即注册"
                android:id="@+id/register"
                android:textAlignment="viewEnd"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:background="@color/publicBackground"
            android:text="确 定"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>