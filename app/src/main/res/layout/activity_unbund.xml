<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c61621"
        android:layout_alignParentTop="true">

        <TextView

            android:id="@+id/editText"
            android:layout_width="397dp"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:text="更换手机号"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />



        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            >
        <Button

            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/fanback_03"
            android:id="@+id/back_left"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/boder"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原手机号"
            android:textSize="18sp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/old_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.18"
            android:inputType="number"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|left"
            app:met_baseColor="#bebdbd"
            app:met_floatingLabelText="aaaaaa"
            app:met_hideUnderline="true"
            android:hint="请输入您的老手机号"
            android:background="@null"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/boder"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:textSize="18sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/new_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:layout_weight="0.18"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="请输入您的新手机号"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="16sp"
            app:met_baseColor="#bebdbd"
            app:met_floatingLabelText="aaaaaa"
            app:met_hideUnderline="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/getcode"
            android:background="@drawable/radius_border_red"
            android:textColor="#e33109"
            android:text="获取验证码"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/boder"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验&#8194;证&#8194;码"
            android:textSize="18sp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.18"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical|left"
            app:met_baseColor="#bebdbd"
            app:met_floatingLabelText="aaaaaa"
            app:met_hideUnderline="true"
            android:hint="请输入您的手机验证码"
            android:background="@null"
            android:textSize="16sp" />


    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.53">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/radius_red"
            android:text="确定"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>
